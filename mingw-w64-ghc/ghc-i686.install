pre_upgrade() {
  echo '==> Unregistering cabalized packages...'
  [[ -d mingw32/share/haskell ]] && find mingw32/share/haskell -maxdepth 2 -name 'unregister.sh' -exec {} \;
  echo '==> Done.'
}

post_upgrade() {
  echo '==> All cabalized packages need to be reinstalled now.'
  echo "==> See /mingw32/share/haskell/ and `ghc-pkg list --user` for a tentative list of affected packages."
}
